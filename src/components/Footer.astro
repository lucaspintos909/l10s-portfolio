---
import type { Locale } from "../i18n/index";
import { ui } from "../i18n/ui";
import { Icon } from "astro-icon/components";

interface Props {
    lang: Locale;
}

const { lang } = Astro.props;
const t = (key: keyof typeof ui["es"]) => ui[lang][key] ?? ui["es"][key];
const year = new Date().getFullYear();
---

<footer class="border-t mt-auto" style="border-color: var(--color-border);">
    <div class="cv-container py-8">
        <div
            class="flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <!-- Left: built with -->
            <p
                class="text-xs font-mono"
                style="color: var(--color-text-muted);"
            >
                {t("footer.built")}
                <a
                    href="https://astro.build"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="cv-link text-xs ml-1">Astro</a
                >
                &
                <a
                    href="https://tailwindcss.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="cv-link text-xs">Tailwind</a
                >
            </p>

            <!-- Center: social links -->
            <div class="flex items-center gap-3">
                <a
                    href="https://github.com/lucaspintos909"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="GitHub"
                    class="h-8 w-8 flex items-center justify-center rounded-md border transition-colors duration-150 hover:bg-zinc-100 dark:hover:bg-zinc-800"
                    style="border-color: var(--color-border); color: var(--color-text-muted);"
                >
                    <Icon name="lucide:github" class="h-4 w-4" />
                </a>
                <a
                    href="https://www.linkedin.com/in/lucas-mateopintos"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="LinkedIn"
                    class="h-8 w-8 flex items-center justify-center rounded-md border transition-colors duration-150 hover:bg-zinc-100 dark:hover:bg-zinc-800"
                    style="border-color: var(--color-border); color: var(--color-text-muted);"
                >
                    <Icon name="lucide:linkedin" class="h-4 w-4" />
                </a>
                <a
                    href="mailto:lucaspintos909@gmail.com"
                    aria-label="Email"
                    class="h-8 w-8 flex items-center justify-center rounded-md border transition-colors duration-150 hover:bg-zinc-100 dark:hover:bg-zinc-800"
                    style="border-color: var(--color-border); color: var(--color-text-muted);"
                >
                    <Icon name="lucide:mail" class="h-4 w-4" />
                </a>
            </div>

            <!-- Right: copyright -->
            <p
                class="text-xs font-mono"
                style="color: var(--color-text-muted);"
            >
                Â© {year} Lucas Pintos. {t("footer.rights")}
            </p>
        </div>
    </div>
</footer>
